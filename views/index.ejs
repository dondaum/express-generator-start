<form action="/tasks" method="post">
  <div class="form-group">
    <label for="exampleInputEmail1">Task Name:</label>
    <input type="text" class="form-control" placeholder="Enter task name" name="taskname">
  </div>
  <div class="form-group">
    <label for="exampleInputEmail1">Task priority:</label>
    <input type="number" class="form-control" placeholder="Enter task priority" name="taskpriority">
  </div>
  <div class="form-group">
    <label for="exampleInputEmail1">Task Due date:</label>
    <input type="date" class="form-control" placeholder="Enter task due date" name="taskduedate">
  </div>
  <button type="submit" value="Create Task" class="btn btn-primary">Submit</button>
</form>
<br><br><br>



<table class="table">
  <thead>
    <tr>
      <th scope="col">id</th>
      <th scope="col">name</th>
      <th scope="col">priority</th>
      <th scope="col">Due to Date</th>
    </tr>
  </thead>
  <tbody>
    <% tasks.forEach(function(task) { %>
      <tr>
        <td><%= task.id %></td>
        <td><%= task.name %></td>
        <td><%= task.priority %></td>
        <td><%= task.due_date.toISOString() %></td>
      </tr>
    <% }) %>
  </tbody>
</table>
